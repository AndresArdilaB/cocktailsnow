.container_list_item 
  width: 254px
  height: 270px
  margin: 15px 10px
  border-radius: 25px
  text-align: center

.media_list_item 
  width: fit-content
  display: flex
  justify-content: center
  border: solid 2px #fff
  border-radius: 5px
  margin-right: 10px

.media_list_item img 
  width: 250px
  border-radius: 5px

.link 
  color: #fff
  text-decoration: none

.link:hover 
  text-decoration: underline
