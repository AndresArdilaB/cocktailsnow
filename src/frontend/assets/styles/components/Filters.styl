.filters__main
  display: flex
  align-items: center
  justify-content: center
  flex-direction: column
  height: 250px
  @media screen and (max-width: 1100px)
    height: 370px
  @media screen and (max-width: 600px)
    height: 570px

.filters__title
  color: white
  font-size: 18px
  padding: 20px 0px

.filters
  display: flex
  flex-direction: row
  @media screen and (max-width: 1100px)
    display: grid
    grid-gap: 0.5rem
    grid-template-columns: 260px 260px 
  @media screen and (max-width: 600px)
    display: flex
    flex-direction: column

.search
  width: 1065px
  background-color: rgba(255, 255, 255, 0.1)
  border: 2px solid white
  border-radius: 25px
  color: white
  font-family: "Muli", sans-serif
  font-size: 16px
  height: 50px
  outline: none
  padding: 0px 20px
  @media screen and (max-width: 1100px)
    width: 510px;
  @media screen and (max-width: 600px)
    width: 250px

.order_container
  margin-top: 20px

.order_button
  background-color: rgba(255, 255, 255, 0.1)
  border: 2px solid white
  border-radius: 25px
  padding: 5px 10px
  margin: 0px 4px
  cursor: pointer

::placeholder
  color: white
