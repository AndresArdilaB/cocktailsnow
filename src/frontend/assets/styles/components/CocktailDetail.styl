.detail
  margin: 20px 0px

.title
  text-align: center
  width: 100%
  font-size: 18px

.detail-container
  display: flex
  flex-direction: row
  margin: 20px auto
  width: fit-content
  @media screen and (max-width: 1100px)
    width: 540px
  @media screen and (max-width: 600px)
    width: 280px
    flex-direction: column

.media
  display: flex
  justify-content: center
  border: solid 2px #fff
  border-radius: 5px
  margin-right: 10px
  width: fit-content
  // @media screen and (max-width: 600px)

.media img 
  max-width: 400px
  width: auto
  object-fit: cover
  @media screen and (max-width: 1100px)
    max-width: 265px

.text
  width: 400px
  @media screen and (max-width: 600px)
    width: 265px

.propierty
  display: flex
  flex-direction: row
  align-items: baseline

  h3
    margin-right: 5px

